<div class="container">
<%= simple_form_for [@cocktail, @dose] do |f| %>
  <% if @dose.errors.any? %>
      <div class="errors-container">
        <ul>
          <% @dose.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <%= f.input :description, :label => "Dose description" %>
  <%= f.select :ingredient_id, Ingredient.all.map { |r| [r.name, r.id]} %>
  <%= f.submit "Add" %>
<% end %>
</div>

